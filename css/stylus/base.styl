// mixins
$debug = false
@import url('https://fonts.googleapis.com/css?family=Iceland');
/**
 * animation-setting(delay)
 * @param {int} delayの秒数(ms)していなしで0ms
 */
if debug
  $logoFadeTime = 1ms
else
  $logoFadeTime = 800ms

body
  // background: white
  background: black
  margin: 0
  transition-delay: 200ms;
  transition-duration: 800ms
  transition-timing-function: ease;
#first-view
  // height: 100%
  // overflow: auto;
  width: 70%
  margin: 0 auto;
  background: black

  header
    #blind-cover
      transition-duration: 800ms
      transition-delay: 200ms
      transition-timing-function: ease;
      position: fixed;
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: black
      opacity: 1
      z-index: 1

    margin: 0 auto;
    position: relative;
    height: 100% // jsで書き換えする
    overflow-x: hidden;
    &:before
      padding: 100%;
    &:after
      content: ""

    #logo1,#logo2
      transition-duration: 800ms
      transition-timing-function: ease;
      position: absolute;
      width: 100%
      margin: auto 0

    #logo1
      z-index: 3
      opacity: 1
      #animation-svg
        position: relative;
        width: 100%
        height: auto;

    #logo2
      z-index: 2
      opacity: 0
      height: 100%
      position: absolute;
      left:50%
      // top: 50%
      img
        display: block;
        width: 100%
        height: auto;
        transform: translateX(-50%)
.container
  width: 100%
  margin: 0 auto
  background-image: url('../img/back/bgd.png');
.area
  font-family: arial, sans-serif;
  font-weight: lighter;
  width: 100%
  // height: 100%
  padding: 2em
  padding: 10em
  // margin: 0 auto
  // background-color: rgba(212, 212, 212, 1);
  position: relative;
  box-sizing: border-box;
  display: flex;

  background-attachment: fixed;
  background-position: left center;
  background-size:contain;
  background-repeat: no-repeat;

  .right
    box-sizing: border-box
    width: 50%
    margin-left: 50%

#event
  background-image: url('../img/back/back-event-ink.svg')
  color: white
  img
    margin-top: 2em
    display: block;
    width: 100%
  h2
    font-family: 'Iceland', cursive;
    font-size: 3em
    margin: 0 auto

  .description
    text-align: center;
    padding-left: 1em
    font-weight: lighter;
    margin-bottom: 0;
    margin-top: 0.8em

  ul
    text-align: center;
    list-style: none;
    font-weight: lighter;

  .map-feild
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 30px;
    height: 0;
    overflow: hidden;
    iframe,object,embed
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
#act
  background-image: url('../img/back/back-act-ink.svg')
  color: white
  #vocal
    margin-bottom: 5em
    h2
      font-family: 'Iceland', cursive;
      font-size: 4em
      margin: 0 auto
    h3
      padding-left: 2em
      margin-bottom: 0;
      margin-top: 0.5em
      display: inline

  #band-member
    h2
      margin-bottom: 1em
      font-family: 'Iceland', cursive;
      font-size: 4em
      margin: 0 auto
    .member-info
      margin-top: 1em
      margin-bottom: 2em
      overflow: auto;
      .l,.r
        width: 50%
        box-sizing: border-box;
        float: left;

      a
        color: rgb(21, 108, 154);
        &:hover
          color:rgb(16, 88, 126)
      h3
        text-align: center;
        font-size: 2em
        margin: 0
      img
        width: 70%
        margin: 0 auto;
        border-radius: 100%
        display: block;

      ul
        list-style:none;
        li
          word-break: keep-all;
          display: inline;
          margin-right: 1em
