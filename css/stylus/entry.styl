@import url('https://fonts.googleapis.com/css?family=Iceland');
@import url('https://fonts.googleapis.com/css?family=Raleway');
@import "./_media_query"
@import "./_checkbox"
@font-face {
  font-family: 'fontello';
  src: url('../img/fontello/font/fontello.eot?99916498');
  src: url('../img/fontello/font/fontello.eot?99916498#iefix') format('embedded-opentype'),
       url('../img/fontello/font/fontello.woff2?99916498') format('woff2'),
       url('../img/fontello/font/fontello.woff?99916498') format('woff'),
       url('../img/fontello/font/fontello.ttf?99916498') format('truetype'),
       url('../img/fontello/font/fontello.svg?99916498#fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}
body
  margin: 0
  padding: 0
  font-family: arial, sans-serif
  background:  rgb(246, 246, 246)
  // color: white

// font-family: 'Iceland', cursive;
.container
  img
    +mq(sm)
      width: 70%
    +mq(pc)
      width: 50%
    margin: 0 auto;
    display: block;
  h1
    // font-size: 3em
    text-align: center;
  .live-field
    width: 100%
    .live-title
      font-family: arial, sans-serif;
  .form-field
    background: rgb(79, 79, 79)
    width: 100%
    margin: 0 auto;
    width: fit-content
    form
      color: white
      // padding: 5em
      padding-bottom: 1em
      p
        margin-left: 2em
        margin-right: 2em
        label
          width: 100%
      input[type="text"],
      textarea {
          width: 100%
          padding: 0.8em;
          outline: none;
          border: 1px solid #DDD;
          -webkit-border-radius: 3px;
          -moz-border-radius: 3px;
          border-radius: 3px;
          font-size: 16px;
      }
      textarea {
          width: 300px;
      }
      button
        margin-bottom: 1em
        display: block;
        width: 100%
        // margin: 0 auto;
        border:solid 1px #ccc;
        box-sizing: border-box;
        padding:15px 30px;
        // margin:0 0 20px;
        font-family:Arial, sans-serif;
        font-size:1.2em;
        text-transform:uppercase;
        font-weight:bold;
        color: white
        background-color: rgb(150, 150, 150)
        cursor:pointer;
      .or
        text-align: center;
        font-size: 2em
        margin: 0
      .mail,.twitter
        padding-top: 0
        margin-top: 0
      .check
        padding-top:1em


.success
  h1
    width: 100%
    text-align: center;
  .description
    text-align: center;
    width: 100%
  .palette
    box-sizing: border-box;
    padding-bottom: 2em
    z-index: -1
    width: fit-content
    +mq(pc)
      height: 100%
    +mq(sm)
      width: 100%
    // padding-bottom: 1em
    margin: 0 auto;
    img
      // max-width: 100%
      +mq(pc)
        height: 100%
      +mq(sm)
        width: 100%
      display: block;
      z-index: 0
    div
      // opacity: 0
      position: relative;
      // font-size: 2em
      margin-top: -5em
      padding-left: 1em
      padding-top: 0
      padding-bottom: 0
      height: 2em
      p#twitter
        z-index: 1
        color: rgb(254,245,255)
        // position: absolute;
        // margin-top: -3em
        // font-size: 2em
        // margin-left: 1em
        font-family: fontello,Raleway
        font-weight: bold;
      p#email
        z-index: 1
        color: rgb(254,245,255)
        // position: absolute;
        // margin-top: -2em/
        // font-size: 2em
        // margin-left: 1em
        font-family: fontello,Raleway
        font-weight: bold;
.re
  position: relative;
  +mq(pc)
    top: -100%
  height: 100%
  +mq(sm)
    top: -100%
  #result
    display: block;
    margin: 0 auto;
    +mq(pc)
      height: 100%
    +mq(sm)
      width: 100%
